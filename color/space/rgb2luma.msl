#ifndef FNC_RGB2LUMA
#define FNC_RGB2LUMA
float rgb2luma( float3 rgb) { return dot(rgb, float3(0.2126, 0.7152, 0.0722)); }
float rgb2luma( float4 rgb) { return rgb2luma(rgb.rgb); }

half rgb2luma( half3 rgb) { return dot(rgb, half3(0.2126, 0.7152, 0.0722)); }
half rgb2luma( half4 rgb) { return rgb2luma(rgb.rgb); }

#endif
