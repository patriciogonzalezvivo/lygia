#ifndef FNC_BLENDSUBTRACT
#define FNC_BLENDSUBTRACT
float blendSubtract(float base, float blend) {
    return fmax(base + blend - 1., 0.);
}

float3 blendSubtract(float3 base, float3 blend) {
    return fmax(base + blend - float3(1.), float3(0.));
}

float3 blendSubtract(float3 base, float3 blend, float opacity) {
    return (blendSubtract(base, blend) * opacity + base * (1. - opacity));
}

half blendSubtract(half base, half blend) {
    return fmax(base + blend - 1., 0.);
}

half3 blendSubtract(half3 base, half3 blend) {
    return fmax(base + blend - half3(1.), half3(0.));
}

half3 blendSubtract(half3 base, half3 blend, half opacity) {
    return (blendSubtract(base, blend) * opacity + base * (1. - opacity));
}
#endif
