#include "../space/rgb2hsv.msl"
#include "../space/hsv2rgb.msl"

/*
contributors: RomaDura
description: Hue Blend mode creates the result color by combining the luminance and saturation of the base color with the hue of the blend color.
use: blendHue(<float|float3> base, <float|float3> blend [, <float> opacity])
license: MIT License (MIT) Copyright (c) 2015 Jamie Owen
*/

#ifndef FNC_BLENDHUE
#define FNC_BLENDHUE
float3 blendHue(float3 base, float3 blend) {
  float3 baseHSL = rgb2hsv(base);
  float3 blendHSL = rgb2hsv(blend);
  return hsv2rgb(
      float3(blendHSL.x, baseHSL.y, baseHSL.z));
}
float3  blendHue(float3 base, float3 blend, float opacity) { 
    return (blendHue(base, blend) * opacity + base * (1. - opacity)); 
}

half3 blendHue(half3 base, half3 blend) {
  half3 baseHSL = rgb2hsv(base);
  half3 blendHSL = rgb2hsv(blend);
  return hsv2rgb(
      half3(blendHSL.x, baseHSL.y, baseHSL.z));
}
half3  blendHue(half3 base, half3 blend, half opacity) { 
    return (blendHue(base, blend) * opacity + base * (1. - opacity)); 
}
#endif
