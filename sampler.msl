#ifndef SAMPLER
#define SAMPLER sampler( min_filter::linear, mag_filter::linear )
#endif

#ifndef SAMPLER_FNC
#define SAMPLER_FNC(TEX, UV) TEX.sample(SAMPLER, UV)
#endif

#ifndef SAMPLER_TYPE
#define SAMPLER_TYPE texture2d<float>
#endif

#ifndef SAMPLER_PRECISION
#define SAMPLER_PRECISION float4
#endif